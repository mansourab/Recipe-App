{% extends 'admin/index.html.twig' %}

{% block title 'Category Index' %}

{% block body %}

    <h2 class="mt-4 mb-4">All Categories</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary">
                        <i class="far fa-edit"></i>
                    </a>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-danger">
                        <i class="far fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'ya aucune categorie pour le momment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="btn btn-primary">+ Ajouter une cat√©gorie</a>
{% endblock %}
